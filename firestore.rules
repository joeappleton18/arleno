rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
       

       // a user can update their own profile and read any profile
         
        match /users/{userId} {
            allow update, delete, create: if request.auth.uid == userId;
            allow read: if request.auty.uid != null;
            allow get:  if request.auth.uid !=  null; 
        }

        match /status/{userId} {
            allow update, delete, create, list: if request.auth.uid !=  null;
        }   
    }


}